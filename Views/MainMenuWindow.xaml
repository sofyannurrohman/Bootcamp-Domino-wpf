<Window x:Class="DominoGameWPF.Views.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Domino Game - Main Menu"
        Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Domino Block Game 🂃"
                       Foreground="#1DCD9F"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Button Content="▶ Start Game"
                    Width="200" Height="40"
                    Background="#1DCD9F"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="0,0,0,20"
                    Click="StartGame_Click"/>
            <Button Content="⚙ Options"
        Width="200" Height="40"
        Background="#444"
        Foreground="White"
        FontWeight="Bold"
        Margin="0,0,0,20"
        Click="Options_Click"/>


            <Button Content="⏻ Exit"
                    Width="200" Height="40"
                    Background="#CF0F47"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
