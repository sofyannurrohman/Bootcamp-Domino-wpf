<Window x:Class="DominoGameWPF.Views.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over"
        Height="220" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock x:Name="WinnerText"
                       Text="Winner: Player X"
                       Foreground="#1DCD9F"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <Button Content="Play Again"
                    Width="150" Height="35"
                    Background="#169976"
                    Foreground="Black"
                    FontWeight="Bold"
                    Margin="0,0,0,10"
                    Click="PlayAgain_Click"/>

            <Button Content="Exit"
                    Width="150" Height="35"
                    Background="#FF4C4C"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="ExitToMenu_Click"/>
        </StackPanel>
    </Grid>
</Window>
